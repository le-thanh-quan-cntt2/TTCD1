
@model LTQ_Webbangiay.Bussiness.ShoppingCart
@{
    ViewBag.Title = "Index";
}


<h2>Giỏ hàng của bạn</h2>

<table class="table table">
    <thead>
        <tr>
            <th>Mã</th>
            <th>Sản phẩm</th>
            <th>Ảnh</th>
            <th>Giá</th>
            <th>Số lượng</th>
            <th>Thành tiền</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (LTQ_Webbangiay.ModelsViews.CartItem item in Model.Items)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Image</td>
                <td>@item.Price.ToString("C")</td>
                <td>
                  <input type="number" value="@item.Qty" name="qty" />
                </td>
                <td>@item.Total.ToString("C")</td>
                <td>
                    <a href="javascript:void(0)" onclick="UpdateCartItem">Cập nhật</a>
                    @Html.ActionLink("Xóa", "RemoveFromCart", new { productId = item.Id })
                </td>
            </tr>
}
    </tbody>
</table>

<h3>Tổng tiền:@Model.GetTotal().ToString("C")</h3>

<a href="Cart/ThongTinThanhToan">Thanh toán</a>